<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ReciboEnTiendaProveedoresDirectos" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow_sunshine</item>
        <item name="colorPrimaryVariant">@color/red_scale</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/park</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/red_scale</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ReciboEnTiendaProveedoresDirectos.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NoActionAndStatusBar" parent="Theme.ReciboEnTiendaProveedoresDirectos.NoActionBar">
        <item name="android:windowTranslucentStatus" >true</item>
    </style>

    <style name="Theme.ReciboEnTiendaProveedoresDirectos.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ReciboEnTiendaProveedoresDirectos.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>